<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityJax">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        tools:context=".Sezon1Sayfa3">

        <Button
            android:id="@+id/button10"
            android:layout_width="125dp"
            android:layout_height="50dp"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="16dp"
            android:onClick="öncekiSayfa"
            android:text="Geri"
            app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintHorizontal_bias="0.204"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
            app:layout_constraintVertical_bias="1.0" />

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.175">

            <ImageView
                android:id="@+id/imageView29"
                android:layout_width="match_parent"
                android:layout_height="154dp"
                app:srcCompat="@drawable/jaxx" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="JAX TELLER"
                android:textAlignment="center"
                android:textColor="#FF0000"
                android:textSize="24sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="Jackson 'Jax' Nathaniel Teller, FX orijinal dizisi Sons of Anarchy'de John Teller ve Gemma Teller Morrow'un oğluydu. İngiliz aktör Charlie Hunnam tarafından oynanan Jax, dizinin ilk sezonunda, dizinin ilk bölümü olan &quot;Pilot&quot; ile ilk kez sahneye çıkıyor. &quot;Bay Kargaşa ile Tanışın&quot; için oylama yapılmadan önce, Charming merkezli Sons of Anarchy Motorcycle Club Redwood Originals'ın (SAMCRO) Başkanı (önceden Başkan Yardımcısı ) idi. California ve SAMCRO, Jax'in bildiği tek hayattır. Jax, tüm dizinin ana kahramanıdır ve her bölümde görünen sadece iki kişiden biridir. (Diğeri Gemma Teller Morrow'dur). Jax kulüp için yaşıyor, ancak &quot;iş&quot; için gideceği şiddetli aşırılıkları sorguluyor. Sonunda, kendisinden önceki babası gibi, bir suçludan başka bir şey olmadığını kabul eder ve babasının mirasını yerine getirmeyi ve oğullarının yaşadığı kaos hayatını asla öğrenmemesini sağlamayı son arzusu haline getirir . Jax, dizinin finali &quot;Papa's Goods&quot;ta babasının kaderiyle vefat eder."
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textStyle="bold|italic" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>