<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityJuicy">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        tools:context=".Sezon1Sayfa3">

        <Button
            android:id="@+id/button10"
            android:layout_width="125dp"
            android:layout_height="50dp"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="16dp"
            android:onClick="öncekiSayfa"
            android:text="Geri"
            app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintHorizontal_bias="0.204"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
            app:layout_constraintVertical_bias="1.0" />

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.175">

            <ImageView
                android:id="@+id/imageView30"
                android:layout_width="match_parent"
                android:layout_height="191dp"
                app:srcCompat="@drawable/juicyy" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="JUAN CARLOS ORTİZ"
                android:textAlignment="center"
                android:textColor="#FF0000"
                android:textSize="24sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="Juan Carlos 'Juice' Ortiz, FX orijinal serisi Sons of Anarchy'de Sons of Anarchy Motorcycle Club (SAMCRO) için bir hacker ve istihbarat subayıydı. Amerikalı aktör Theo Rossi'nin canlandırdığı Juice, dizinin ilk bölümü olan &quot;Pilot&quot; ile ilk çıkışını yapıyor. Harika bir teknik hüner sergiliyor, ancak diğer görevlere gelince biraz basit fikirli olduğunu kanıtlayan Juice çoğu zaman diğer üyeler tarafından rahatsız ediliyor. Başlangıçta kulüp ve üyeleri için daha önceki sezonlarda güçlü bir müttefik olarak hizmet etmesine rağmen, daha sonra kulüpteki yerini korumak için müttefiklerine karşı çalışmaya istekli olduğu görülüyor. Bu, Juice'nin kararlarını ve eylemlerini sorgularken zihinsel durumunda aşağı doğru bir sarmal yol açar, ancak yalnızlıkla yüzleşemez ve kulüp onun tek ailesidir. Serinin birinci, ikinci , üçüncü , dördüncü , beşinci , altıncı ve yedinci sezonları boyunca tekrar eden bir rol oynar.Sezonlar, onun çözülmesi, kulübe karşı bir sorumluluk haline gelmesi anlamına gelir ve sonunda diğer üyelerin ona güvenmemesine neden olur. Talihsiz aforozunun ardından Juice, dizinin yedinci ve son sezonundaki &quot; Kırmızı Gül &quot; bölümünde vefat etti."
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textStyle="bold|italic" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>